{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["*.d.ts", "src/**/*.d.ts", "src/**/*.ts"]
}
